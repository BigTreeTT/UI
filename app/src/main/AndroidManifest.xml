<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.longteng.androidui">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToolsBarActivity"
            android:theme="@style/lightTheme" />
        <activity android:name=".WebViewActivity" />
        <activity android:name=".TextViewActivity" />
        <activity android:name=".AnimationActivity" />
        <activity android:name=".ProgressBar.ProgressBarActivity" />
        <activity android:name=".Service.ServiceActivity" />

        <service
            android:name=".Service.TestService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".security.SecurityActivity" />
        <activity android:name=".Notification.NotificationActivity" />
        <activity android:name=".CustomView.CustomViewShowActivity"></activity>
    </application>

</manifest>