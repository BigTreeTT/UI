<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_view_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.longteng.androidui.CustomView.CustomViewShowActivity"
    xmlns:attr="http://schemas.android.com/apk/res-auto"
    >

    <com.example.longteng.androidui.CustomView.ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Android" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Android" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="Android" />


    </com.example.longteng.androidui.CustomView.ScrollView>

    <com.example.longteng.androidui.CustomView.VDHLLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/vdh_layout"
        android:layout_below="@+id/scrollView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#8833b5e5"
            android:gravity="center"
            android:text="ViewDragTest" />

        <TextView
            android:id="@+id/tv_edge"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="#88ff4444"
            android:gravity="center"
            android:text="EdgeCapture" />

    </com.example.longteng.androidui.CustomView.VDHLLayout>

    <com.example.longteng.androidui.CustomView.TouchViewTest
        android:id="@+id/iv_touch"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/vdh_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.example.longteng.androidui.CustomView.TouchViewGroupTest
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/iv_touch"
        android:id="@+id/touch_group"
        >
        <com.example.longteng.androidui.CustomView.TouchViewTest
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_orange_light"
            />
    </com.example.longteng.androidui.CustomView.TouchViewGroupTest>
    <com.example.longteng.androidui.CustomView.AttributeTestView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        attr:title="hi"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>
